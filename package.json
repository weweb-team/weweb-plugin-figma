{
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.12.1",
  "scripts": {
    "dev": "plugma dev",
    "build": "plugma build",
    "preview": "plugma preview",
    "release": "plugma release"
  },
  "dependencies": {
    "vue": "^3.5.12"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.88.0",
    "@types/node": "^24.0.3",
    "@vitejs/plugin-vue": "^5.1.4",
    "plugma": "^1.2.9",
    "typescript": "~5.6.2",
    "vite": "^5.4.10",
    "vue-tsc": "^2.1.8"
  },
  "plugma": {
    "manifest": {
      "id": "copy-figma-nodes",
      "name": "Copy Figma Nodes",
      "main": "src/main.ts",
      "ui": "src/ui.ts",
      "editorType": [
        "figma",
        "figjam"
      ],
      "networkAccess": {
        "allowedDomains": [
          "none"
        ],
        "devAllowedDomains": [
          "http://localhost:*",
          "ws://localhost:9001"
        ]
      }
    }
  }
